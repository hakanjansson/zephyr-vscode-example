{
		// Modify these to match installation paths
		"modustoolbox.toolsPath": "/opt/Tools/ModusToolbox/tools_3.2",
		"zephyr.zephyr_base": "${userHome}/zephyrproject/zephyr",
		"zephyr.modules_base": "${config:zephyr.zephyr_base}/../modules",

		"cortex-debug.openocdPath": "${config:modustoolbox.toolsPath}/openocd/bin/openocd",
		"cortex-debug.armToolchainPath": "${config:modustoolbox.toolsPath}/gcc/bin",

		// Hush CMake
		"cmake.configureOnOpen": false,

		// IntelliSense
		"C_Cpp.default.compilerPath": "${config:cortex-debug.armToolchainPath}/arm-none-eabi-gcc",
		"C_Cpp.default.compileCommands": "${workspaceFolder}/build/compile_commands.json",

		// File Associations
		"files.associations": {
		},
}